{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BUILD",
            "command": "g++",
            "args": [
                "-g",
                "-v",
                "${workspaceFolder}\\src\\main.cpp",
                "-o",
                "${workspaceFolder}\\bin\\main.exe",
                "-I",
                "${workspaceFolder}\\src\\lib\\GLFW\\include\\",
                "-L",
                "${workspaceFolder}\\src\\lib\\GLFW\\lib-mingw-w64\\",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32"
            ],
            "options": {
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
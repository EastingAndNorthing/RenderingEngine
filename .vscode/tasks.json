{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BUILD",
            "command": "g++",
            "args": [
                "-g",       // Debug flag
                // "-v",    // Verbose output
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\src\\general\\*.cpp",
                "${workspaceFolder}\\src\\renderer\\*.cpp",
                
                "-I${workspaceFolder}\\lib\\glfw-3.3.2\\include\\",             // GLFW
                "-L${workspaceFolder}\\lib\\glfw-3.3.2\\lib-mingw-w64\\",       // GLFW
                "-lglfw3",                                                      // GLFW
                "-lgdi32",                                                      // GLFW

                "-I${workspaceFolder}\\lib\\glad\\include\\",                   // GLAD
                "${workspaceFolder}\\lib\\glad\\src\\glad.c",                   // GLAD
                
                "-lopengl32", 

                "-o",
                "${workspaceFolder}\\bin\\main.exe",
            ],
            "options": {
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}